<% include ./partials/header %>

<h1>this is the index page</h1>

<% blogs.forEach(function(blog){ %>
    <div>
        <h1> <%= blog.title %></h1>
        <img src="<%= blog.image %>"  />
        <span><%= blog.created %></span>
        <p> <%= blog.body.substring(0,100) %> ... </p>
        <a href="/blogs/<%= blog._id %>">Read More</a>
    </div>
<% }) %>

<% include ./partials/footer %>